# ================================
# Copilot API - Environment Variables
# ================================
# Copy file này thành .env và thay đổi giá trị phù hợp:
#   cp .env.example .env

# ---- Ports ----
COPILOT_API_PORT=4141
DASHBOARD_PORT=3000

# ---- Domain (cho VPS) ----
# URL công khai của Copilot API, hiển thị trong hướng dẫn Dashboard
# Ví dụ: https://api.yourdomain.com hoặc http://YOUR_VPS_IP:4141
# Nếu để trống, tự động detect từ request
# PUBLIC_API_URL=https://api.yourdomain.com

# ---- Security (BẮT BUỘC thay đổi trước khi deploy!) ----
# Secret dùng để giao tiếp nội bộ giữa dashboard và copilot-api
INTERNAL_SECRET=change-me-to-a-random-secret

# JWT secret cho dashboard authentication
JWT_SECRET=change-me-jwt-secret-key

# Mật khẩu admin mặc định (chỉ dùng lần đầu tạo)
ADMIN_PASSWORD=admin123

# ---- API Authentication ----
# Bật/tắt xác thực API key khi gọi tới copilot-api endpoints
# true = yêu cầu API key, false = cho phép tất cả (mặc định: true)
ENABLE_API_AUTH=true
